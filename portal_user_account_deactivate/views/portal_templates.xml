<odoo>
    <template
        id="portal_account_deactivate"
        name="Portal hook"
        inherit_id="portal.portal_my_security"
    >
        <xpath
            expr="//div[@class='o_portal_security_body']/section[last()]"
            position="after"
        >
            <section>
                <h3>Deactivate Account</h3>
                <div class="alert alert-danger" role="alert">
                    <span
                    >Be careful. You will no longer be able to log in once you click the 'Deactivate Account' button.</span>
                </div>
                <form action="/my/deactivate" method="post">
                    <div class="mt-3">
                        <input
                            type="hidden"
                            name="csrf_token"
                            t-att-value="request.csrf_token()"
                        />
                        <button
                            type="submit"
                            class="btn btn-danger"
                        >Deactivate Account</button>
                    </div>
                </form>
            </section>
        </xpath>
    </template>
</odoo>
